<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>RifqyDesign</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto&family=Montserrat&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg:#121212; --text:#f0f0f0; --card:#1c1c1c; --border:#2a2a2a;
      --primary:#007bff; --secondary:#22c55e; --accent:#ff9800;
    }
    *{box-sizing:border-box}
    body{margin:0;font-family:'Poppins',sans-serif;background:var(--bg);color:var(--text);}
    header{padding:16px;text-align:center;border-bottom:1px solid var(--border);}
    header h1{margin:0;font-size:1.4rem;}
    .container{display:flex;flex-direction:column;gap:16px;padding:16px;}
    .panel{background:var(--card);padding:16px;border-radius:12px;border:1px solid var(--border);}
    .panel h2{margin-top:0;font-size:1.1rem;}
    .controls{display:flex;flex-direction:column;gap:12px;}
    label{font-weight:600;font-size:0.9rem;}
    input[type="color"],select,input[type="text"]{padding:8px;border-radius:8px;border:1px solid var(--border);background:#141414;color:var(--text);}
    .preview{background:#fff;color:#000;padding:20px;border-radius:12px;min-height:200px;}
    .preview h1{margin:0 0 12px;}
    .preview p{margin:0 0 12px;}
    .btn{padding:10px 14px;border:none;border-radius:8px;cursor:pointer;font-weight:600;}
    .btn.primary{background:var(--primary);color:#fff;}
    .btn.secondary{background:var(--secondary);color:#fff;}
    .btn.accent{background:var(--accent);color:#fff;}
    .export{margin-top:12px;display:flex;gap:8px;flex-wrap:wrap;}
    textarea{width:100%;height:120px;margin-top:12px;padding:10px;border-radius:8px;border:1px solid var(--border);background:#141414;color:var(--text);}
    @media(min-width:900px){
      .container{flex-direction:row;}
      .panel{flex:1;}
      .preview{flex:2;}
    }
  </style>
</head>
<body>
  <header>
    <h1>üé® RifqyDesign Playground</h1>
  </header>
  <div class="container">
    <div class="panel">
      <h2>Pengaturan</h2>
      <div class="controls">
        <div>
          <label for="colorPrimary">Warna Utama</label>
          <input type="color" id="colorPrimary" value="#007bff">
        </div>
        <div>
          <label for="colorSecondary">Warna Sekunder</label>
          <input type="color" id="colorSecondary" value="#22c55e">
        </div>
        <div>
          <label for="colorAccent">Warna Aksen</label>
          <input type="color" id="colorAccent" value="#ff9800">
        </div>
        <div>
          <label for="fontSelect">Font</label>
          <select id="fontSelect">
            <option value="Poppins">Poppins</option>
            <option value="Roboto">Roboto</option>
            <option value="Montserrat">Montserrat</option>
          </select>
        </div>
        <div>
          <label for="sampleText">Teks Preview</label>
          <input type="text" id="sampleText" value="Halo, ini RifqyDesign!">
        </div>
      </div>
      <div class="export">
        <button id="exportCSS" class="btn primary">‚¨áÔ∏è Export CSS</button>
        <button id="exportJSON" class="btn secondary">‚¨áÔ∏è Export JSON</button>
      </div>
      <textarea id="output" readonly placeholder="Hasil export akan muncul di sini..."></textarea>
    </div>
    <div class="preview" id="preview">
      <h1>Judul Preview</h1>
      <p id="previewText">Halo, ini RifqyDesign!</p>
      <button class="btn primary">Primary</button>
      <button class="btn secondary">Secondary</button>
      <button class="btn accent">Accent</button>
    </div>
  </div>

  <script>
    const colorPrimary = document.getElementById('colorPrimary');
    const colorSecondary = document.getElementById('colorSecondary');
    const colorAccent = document.getElementById('colorAccent');
    const fontSelect = document.getElementById('fontSelect');
    const sampleText = document.getElementById('sampleText');
    const previewText = document.getElementById('previewText');
    const output = document.getElementById('output');
    const exportCSS = document.getElementById('exportCSS');
    const exportJSON = document.getElementById('exportJSON');

    function updateDesign(){
      document.documentElement.style.setProperty('--primary', colorPrimary.value);
      document.documentElement.style.setProperty('--secondary', colorSecondary.value);
      document.documentElement.style.setProperty('--accent', colorAccent.value);
      document.body.style.fontFamily = fontSelect.value + ', sans-serif';
      previewText.textContent = sampleText.value;
    }

    [colorPrimary,colorSecondary,colorAccent,fontSelect,sampleText].forEach(el=>{
      el.addEventListener('input', updateDesign);
    });

    exportCSS.addEventListener('click', () => {
      const css = `
:root {
  --primary: ${colorPrimary.value};
  --secondary: ${colorSecondary.value};
  --accent: ${colorAccent.value};
}
body {
  font-family: ${fontSelect.value}, sans-serif;
}
`;
      output.value = css.trim();
    });

    exportJSON.addEventListener('click', () => {
      const json = {
        primary: colorPrimary.value,
        secondary: colorSecondary.value,
        accent: colorAccent.value,
        font: fontSelect.value,
        sampleText: sampleText.value
      };
      output.value = JSON.stringify(json, null, 2);
    });

    // init
    updateDesign();
  </script>
</body>
</html>
